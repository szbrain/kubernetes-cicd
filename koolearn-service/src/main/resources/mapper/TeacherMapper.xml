<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koolearn.club.mapper.TeacherMapper">
  <sql id="Base_Column_List">id, sid, `name`, nickname, phone, sex, avatar, `identity`, `desc`, open_id, source, create_time, update_time</sql>
  <resultMap id="BaseResultMap" type="com.koolearn.club.entity.PeTeacher">
      <id column="id" property="id" jdbcType="INTEGER"/>
      <result column="sid" property="sid" jdbcType="VARCHAR"/>
      <result column="name" property="name" jdbcType="VARCHAR"/>
      <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
      <result column="phone" property="phone" jdbcType="VARCHAR"/>
      <result column="sex" property="sex" jdbcType="TINYINT"/>
      <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
      <result column="identity" property="identity" jdbcType="VARCHAR"/>
      <result column="desc" property="desc" jdbcType="VARCHAR"/>
      <result column="open_id" property="openId" jdbcType="VARCHAR"/>
      <result column="source" property="source" jdbcType="TINYINT"/>
      <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
      <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>

  </resultMap>

    <select id="getById" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from pe_teacher
        where id=#{id} and is_delete != 1
    </select>


    <select id="getBySid" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from pe_teacher
        where sid=#{sid} and is_delete != 1 limit 1
    </select>


    <select id="getByOpenId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from pe_teacher
        where open_id=#{openId} and is_delete != 1 limit 1
    </select>


    <update id="update" parameterType="com.koolearn.club.entity.PeTeacher">
        update pe_teacher
        set nickname = #{nickname},
        avatar = #{avatar},
        `identity` = #{identity},
        `desc` = #{desc}
        where id=#{id}
    </update>

    <update id="updateSid">
        update pe_teacher
        set sid = #{sid}
        where id=#{id}
    </update>


    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.koolearn.club.entity.PeTeacher">
        insert into pe_teacher(
        sid, `name`, nickname, phone, sex, avatar, `identity`, `desc`, open_id, source, create_time
        )
        values(
        #{sid}, #{name}, #{nickname}, #{phone}, #{sex}, #{avatar}, #{identity}, #{desc}, #{openId}, #{source}, #{createTime}
        )
    </insert>

</mapper>
