<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koolearn.club.mapper.FormIdMapper">

  <sql id="Base_Column_List">id, open_id, form_id, `type`, is_use, create_time</sql>

  <resultMap id="BaseResultMap" type="com.koolearn.club.entity.PeFormId">
      <id column="id" property="id" jdbcType="INTEGER"/>
      <result column="open_id" property="openId" jdbcType="VARCHAR"/>
      <result column="form_id" property="formId" jdbcType="VARCHAR"/>
      <result column="type" property="type" jdbcType="TINYINT"/>
      <result column="is_use" property="isUse" jdbcType="TINYINT"/>
      <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
  </resultMap>

    <select id="getById" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from pe_form_id
        where id=#{id} and is_delete != 1
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.koolearn.club.entity.PeFormId">
        insert into pe_form_id(
        open_id, form_id, `type`, create_time
        )
        values(
        #{openId}, #{formId}, #{type}, #{createTime}
        )
    </insert>


    <select id="listByOpenId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from pe_form_id
        where open_id=#{openId} and `type`=#{type} and is_use != 1
    </select>

    <select id="listOfEverydayByOpenId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from pe_form_id
        where open_id=#{openId} and `type`=#{type} and to_days(create_time) = to_days(#{dateTime}) and is_use != 1
    </select>

    <update id="updateIsUse">
        update pe_form_id
        set is_use = 1
        where open_id=#{openId} and form_id=#{formId}
    </update>

</mapper>
