<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koolearn.club.mapper.TeachTokenMapper">

  <sql id="Base_Column_List">id, code, teach_id, status, create_time, update_time</sql>

  <resultMap id="BaseResultMap" type="com.koolearn.club.entity.PeTeachToken">
      <id column="id" property="id" jdbcType="INTEGER"/>
      <result column="code" property="code" jdbcType="VARCHAR"/>
      <result column="teach_id" property="teachId" jdbcType="INTEGER"/>
      <result column="status" property="status" jdbcType="TINYINT"/>
      <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
      <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
  </resultMap>

    <select id="getById" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from pe_teach_token
        where id=#{id} and is_delete != 1
    </select>

    <select id="getByCode" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from pe_teach_token
        where code=#{code} and is_delete != 1
        limit 1
    </select>


    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.koolearn.club.entity.PeTeachToken">
        insert into pe_teach_token(
        code, teach_id, status, create_time
        )
        values(
        #{code}, #{teachId}, #{status}, #{createTime}
        )
    </insert>


    <update id="update" parameterType="com.koolearn.club.entity.PeTeachToken">
        update pe_teach_token
        set teach_id = #{teachId},
        status = #{status}
        where id=#{id}
    </update>


    <update id="updateStatus" parameterType="com.koolearn.club.entity.PeTeachToken">
        update pe_teach_token
        set status = #{status}
        where id=#{id}
    </update>

</mapper>
